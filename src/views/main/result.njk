{% extends "base.njk" %}

{% block wrappedContent %}

{% from "govuk/components/panel/macro.njk" import govukPanel %}
{% from "govuk/components/table/macro.njk" import govukTable %}

{% set rows = [] %}

{% for item in breakdown %}
    {{ rows.push([
      {
        "text": item.desc
      },
      {
        "text": item.amount
      }
    ]) | reject() }}
{% endfor %}


{% set vatText = "" %}
{% if isVatRegistered %}
    {% set vatText = "You are VAT registered and " + vatAmount + " is VAT." %}
{% else %}
    {% set vatText = "You are not VAT registered" %}
{% endif %}

{{ govukPanel({
  titleText: "Your total is " + total,
  html: vatText
}) }}

{{ govukTable({
  caption: "Breakdown",
  captionClasses: "govuk-table__caption--m",
  firstCellIsHeader: true,
  head: [
    {
      text: "Description"
    },
    {
      text: "Amount"
    }
  ],
  rows: rows
}) }}



{% endblock %}